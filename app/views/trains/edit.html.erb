h1>Изменить поезд</h1>

<%= form_for(@train) do |f| %>
    <% if @train.errors.any? %>
        <div id="error_explanation">
          <h2><% pluralize(@train.errors.count, "error") %> Ошибка! </h2>
          <ul>
            <% @train.errors.full_messages.each do |message| %>
                <li><%= message %> </li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :number %>
      <%= f.text_field :number %>
    </div>
    <div class="actions">
      <%= f.submit 'Изменить'%>
    </div>

<% end %>

<%= link_to 'Назад', trains_path %>